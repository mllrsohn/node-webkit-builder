{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
