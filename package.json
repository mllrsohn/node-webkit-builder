{
  "name": "nw-builder",
  "version": "4.5.3",
  "description": "Build NW.js desktop applications for MacOS, Windows and Linux.",
  "keywords": [
    "NW.js",
    "node-webkit",
    "Desktop",
    "Application"
  ],
  "author": {
    "name": "Steffen MÃ¼ller",
    "url": "https://www.mllrsohn.com/"
  },
  "maintainers": [
    {
      "name": "Ayushman Chhabra",
      "url": "https://ayushmanchhabra.com/"
    }
  ],
  "contributors": [
    {
      "name": "nw-builder Contributors",
      "url": "https://github.com/nwutil/nw-builder/graphs/contributors"
    }
  ],
  "license": "MIT",
  "main": "./src/index.js",
  "bin": {
    "nwbuild": "./src/cli.js"
  },
  "types": "./src/index.d.ts",
  "type": "module",
  "files": [
    "LICENSE",
    "src"
  ],
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "lint": "eslint src/get.js",
    "docs": "jsdoc -d docs ./src/get.js ./src/run.js ./src/bld.js",
    "test": "node --test test/get.test.js test/addon.js ",
    "demo": "cd test/fixture && node demo.js"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-jsdoc": "^46.9.1",
    "jsdoc": "^4.0.2",
    "selenium-webdriver": "^4.16.0"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "compressing": "^1.10.0",
    "glob": "^10.3.10",
    "node-gyp": "^10.0.1",
    "plist": "^3.1.0",
    "rcedit": "^4.0.1",
    "tar": "^6.2.0",
    "unzipper": "^0.10.14",
    "yargs": "^17.7.2"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jsdoc/recommended"
    ],
    "rules": {
      "jsdoc/tag-lines": "off",
      "jsdoc/check-property-names": "off"
    }
  }
}
