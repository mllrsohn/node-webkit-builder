{
  "name": "nw-builder",
  "version": "3.8.8",
  "description": "Build NW.js desktop applications for Mac, Windows and Linux.",
  "keywords": [
    "NW.js",
    "node-webkit",
    "Desktop",
    "Application"
  ],
  "author": {
    "name": "Steffen MÃ¼ller",
    "url": "https://www.mllrsohn.com/"
  },
  "maintainers": [
    {
      "name": "Ayushman Chhabra",
      "url": "https://ayushmanchhabra.com/"
    }
  ],
  "contributors": [
    {
      "name": "nw-builder Contributors",
      "url": "https://github.com/nwutil/nw-builder/graphs/contributors"
    }
  ],
  "license": "MIT",
  "main": "./lib/index.cjs",
  "bin": {
    "nwbuild": "./bin/nwbuild.cjs"
  },
  "type": "module",
  "files": [
    "bin",
    "lib",
    "src"
  ],
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "postinstall": "npm run test:dist",
    "fmt": "prettier --write .",
    "lnt": "eslint --config=cfg/eslint.config.cjs --fix src",
    "test:dist": "esbuild src/index.js --bundle --platform=node --outfile=./dist/index.cjs",
    "test:link": "npm link nw-builder",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit",
    "test:tape": "tape './test/*.cjs'",
    "test:sanity": "node --test-reporter=spec --test test/chromedriver.mjs",
    "demo": "cd test && node demo.cjs"
  },
  "devDependencies": {
    "decompress-zip": "^0.3.3",
    "eslint": "^8.47.0",
    "eslint-config-tjw-jsdoc": "^1.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jsdom": "^22.1.0",
    "nock": "^13.3.3",
    "prettier": "^3.0.2",
    "redtape": "^1.0.0",
    "rimraf": "^3.0.2",
    "selenium-webdriver": "^4.11.1",
    "tape": "^5.6.6"
  },
  "dependencies": {
    "archiver": "^6.0.0",
    "cli-progress": "^3.12.0",
    "compressing": "^1.9.1",
    "esbuild": "^0.19.2",
    "graceful-fs-extra": "^2.0.0",
    "lodash": "^4.17.21",
    "plist": "^3.1.0",
    "rcedit": "^3.0.1",
    "request": "^2.88.2",
    "semver": "^7.5.4",
    "simple-glob": "^0.2.0",
    "temp": "^0.9.4",
    "thenify": "^3.3.1",
    "winresourcer": "^0.9.0",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "packageManager": "npm@9.8.1",
  "jest": {
    "testEnvironment": "jsdom"
  }
}
