{
  "name": "nw-builder",
  "version": "4.0.2",
  "description": "Build NW.js desktop applications for Mac, Windows and Linux.",
  "keywords": [
    "NW.js",
    "node-webkit",
    "Desktop",
    "Application"
  ],
  "author": {
    "name": "Steffen MÃ¼ller",
    "email": "steffen@mllrsohn.com",
    "url": "https://github.com/steffenmllr"
  },
  "license": "MIT",
  "main": "./src/nwbuild.js",
  "exports": {
    "import": "./src/nwbuild.js",
    "require": "./dist/nwbuild.cjs"
  },
  "type": "module",
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "format": "prettier --write \"./**/*.{js,md}\"",
    "lint": "eslint ./src",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "docs": "jsdoc ./src/nwbuild.js -d docs",
    "demo:cli": "cd ./test/demo && nwbuild ./nwapp --mode=build --version=0.70.1 --flavour=normal --platform=win --arch=x64 --outDir=./build",
    "demo:nux": "npm run cjs && cd ./test/demo && node nux.js",
    "demo:osx": "npm run cjs && cd ./test/demo && node osx.js",
    "demo:win": "npm run cjs && cd ./test/demo && node win.js",
    "cjs": "esbuild ./src/nwbuild.js --bundle --minify --legal-comments=inline --platform=node --outfile=./dist/nwbuild.cjs",
    "checklist": "npm run cjs && npm run format && npm run lint && npm run test"
  },
  "devDependencies": {
    "esbuild": "^0.16.3",
    "eslint": "^8.25.0",
    "eslint-config-tjw-jsdoc": "^1.0.3",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.0",
    "jsdoc": "^4.0.0",
    "jsdom": "^20.0.0",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "cli-progress": "^3.11.2",
    "extract-zip": "^2.0.1",
    "plist": "^3.0.6",
    "progress": "^2.0.3",
    "rcedit": "^3.0.1",
    "tar": "^6.1.11",
    "winston": "^3.8.2",
    "yargs": "^17.5.1"
  },
  "bin": {
    "nwbuild": "./src/cli.js"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "tjw-jsdoc"
    ],
    "rules": {
      "jsdoc/require-file-overview": "off",
      "jsdoc/match-description": "off"
    }
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
