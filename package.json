{
  "name": "nw-builder",
  "version": "3.6.0",
  "description": "Build NW.js applications for Mac, Windows and Linux.",
  "keywords": ["NW.js", "Desktop", "Application"],
  "author": "Steffen MÃ¼ller",
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/nwjs-community/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwjs-community/nw-builder.git"
  },
  "scripts": {
    "format": "prettier --write ./lib",
    "lint": "eslint --ext .js ./lib",
    "test": "tape test/*.js",
    "demo": "node ./demo.js"
  },
  "devDependencies": {
    "decompress-zip": "0.3.3",
    "eol": "0.9.1",
    "eslint": "8.15.0",
    "nock": "9.0.5",
    "prettier": "2.6.2",
    "redtape": "1.0.0",
    "tap-spec": "4.1.1",
    "tape": "4.9.0"
  },
  "dependencies": {
    "archiver": "2.1.1",
    "boxen": "1.1.0",
    "chalk": "2.3.2",
    "deprecate": "1.1.1",
    "extract-zip": "1.6.5",
    "graceful-fs-extra": "2.0.0",
    "graceful-ncp": "3.0.0",
    "inherits": "2.0.4",
    "lazy-req": "2.0.0",
    "lodash": "4.17.21",
    "optimist": "0.6.1",
    "plist": "3.0.5",
    "progress": "2.0.3",
    "rcedit": "1.0.0",
    "recursive-readdir-sync": "1.0.6",
    "request": "2.88.2",
    "rimraf": "2.5.2",
    "semver": "5.5.0",
    "simple-glob": "0.2.0",
    "tar-fs": "1.16.2",
    "temp": "github:adam-lynch/node-temp#remove_tmpdir_dep",
    "thenify": "3.3.1",
    "update-notifier": "2.4.0",
    "winresourcer": "0.9.0",
    "yargs": "17.2.1"
  },
  "bin": {
    "nwbuild": "./bin/nwbuild"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended"
  }
}
