{
  "name": "nw-builder",
  "version": "4.0.0-rc.5",
  "description": "Build NW.js desktop applications for Mac, Windows and Linux.",
  "keywords": [
    "nw",
    "node-webkit",
    "NW.js",
    "Desktop",
    "Application"
  ],
  "author": "Steffen MÃ¼ller <steffen@mllrsohn.com>",
  "license": "MIT",
  "main": "./src/nwbuild.js",
  "type": "module",
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "format": "prettier --write ./bin ./src ./test",
    "lint": "eslint ./bin/**.js ./src/**/*.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "demo": "cd ./test/demo && npm start"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-tjw-jsdoc": "^1.0.3",
    "eslint-plugin-jsdoc": "^39.3.3",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "nw-develop": "^0.1.0",
    "nw-install": "^0.3.1",
    "nw-package": "^0.1.0",
    "yargs": "^17.5.1",
    "yup": "^0.32.11"
  },
  "bin": {
    "nwbuild": "./bin/nwbuild.js"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "tjw-jsdoc"
    ],
    "overrides": [
      {
        "files": "./src/**/*.js"
      }
    ],
    "plugins": [
      "jsdoc"
    ]
  }
}
